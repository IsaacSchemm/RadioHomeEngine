@model CDsModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0" />
    <title>CD</title>
    @await Html.PartialAsync("_Styles")
    <style type="text/css">
        .trackTable th,
        .trackTable td {
            padding: 0 0.5em;
        }

        fieldset {
            margin: 16px auto;
            max-width: 280px;
        }

        iframe[name=myframe] {
            border: 0;
            margin: 0.5em;
        }
    </style>
</head>
<body>
    <p>
        <a href="/">&larr; Home</a>
    </p>

    <p>
        <a href="http://@this.Context.Request.Host.Host:9000">Go to Lyrion Music Server</a>
    </p>

    <hr />

    @foreach (var drive in Model.CDs)
    {
        <h1>CD Drive @drive.device</h1>

        var empty = drive.disc.audio.tracks.IsEmpty && drive.disc.data.files.IsEmpty;

        if (!empty)
        {
            <fieldset>
                <legend>Play on</legend>

                @foreach (var player in Model.Players)
                {
                    <p>
                        <form asp-action="PlayCD" target="myframe">
                            <input type="hidden" name="device" value="@drive.device" />
                            <input type="hidden" name="mac" value="@player.MacAddress" />
                            <button type="submit">
                                @player.Name
                            </button>
                        </form>
                    </p>
                }
            </fieldset>
        }

        if (!drive.disc.audio.tracks.IsEmpty)
        {
            <p>
                @foreach (var title in drive.disc.audio.titles)
                {
                    <div style="font-size: 150%">@title</div>
                }
                @foreach (var artist in drive.disc.audio.artists)
                {
                    <div>@artist</div>
                }
            </p>

            <table class="trackTable">
                <thead>
                    <tr>
                        <th scope="col">Track</th>
                        <th scope="col" align="left">Title</th>
                        <th scope="col" align="left">Download</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var track in drive.disc.audio.tracks)
                    {
                        <tr>
                            <td>
                                @track.position
                            </td>
                            <td align="left">
                                @track.title
                            </td>
                            <td align="left">
                                <a href="/CD/PlayTrack?device=@drive.device&track=@track.position">
                                    .wav
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        if (!drive.disc.data.files.IsEmpty)
        {
            <fieldset>
                <legend>CD-ROM</legend>

                <table class="trackTable">
                    <thead>
                        <tr>
                            <th scope="col" align="left">Name</th>
                            <th scope="col" align="left">Size (bytes)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in drive.disc.data.files)
                        {
                            <tr>
                                <td align="left">
                                    @file.name
                                </td>
                                <td align="left">
                                    @file.size
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </fieldset>
        }

        if (!empty)
        {
            <p>
                <form asp-action="RipCD" target="myframe">
                    <input type="hidden" name="device" value="@drive.device" />
                    <button type="submit">
                        Rip CD
                    </button>
                </form>
            </p>
        }

        <p>
            <form asp-action="EjectCD" target="myframe">
                <input type="hidden" name="device" value="@drive.device" />
                <button type="submit">
                    Eject CD
                </button>
            </form>
        </p>
    }

    <iframe name="myframe" width="300" height="50" src="about:blank"></iframe>
</body>
</html>
